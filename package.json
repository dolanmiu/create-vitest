{
  "name": "create-vitest",
  "version": "1.0.0",
  "description": "A npx command to create and scaffold vite tests with best practices",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/main.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "chmod +x ./dist/cjs/index.js",
    "preview": "vite preview",
    "test": "vitest --ui",
    "test:ci": "vitest run",
    "prettier": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dolanmiu/create-vitest.git"
  },
  "keywords": [
    "vitest",
    "test",
    "testing",
    "scaffold",
    "ast",
    "vite"
  ],
  "author": "Dolan Miu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dolanmiu/create-vitest/issues"
  },
  "homepage": "https://github.com/dolanmiu/create-vitest#readme",
  "bin": {
    "create-vitest": "./dist/cjs/index.js"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.34.2",
    "@vitest/ui": "^0.34.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.2"
  },
  "dependencies": {
    "prettier": "^3.0.2",
    "ts-morph": "^19.0.0",
    "yargs": "^17.7.2"
  }
}
