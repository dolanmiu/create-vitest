{
  "name": "create-vitest",
  "version": "1.0.0",
  "description": "A npx command to create and scaffold vite tests with best practices",
  "main": "./dist/main.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build:lib": "tsc --p tsconfig.lib.json",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --ui",
    "test:ci": "vitest run",
    "prettier": "prettier --write .",
    "run": "node dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dolanmiu/create-vitest.git"
  },
  "keywords": [
    "vitest",
    "test",
    "testing",
    "scaffold",
    "ast",
    "vite"
  ],
  "author": "Dolan Miu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dolanmiu/create-vitest/issues"
  },
  "homepage": "https://github.com/dolanmiu/create-vitest#readme",
  "bin": {
    "create-vitest": "./dist/main.js"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.34.2",
    "@vitest/ui": "^0.34.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vite-plugin-node-polyfills": "^0.11.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.2"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/yargs": "^17.0.24",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.10",
    "prettier": "^3.0.2",
    "ts-morph": "^19.0.0",
    "yargs": "^17.7.2"
  }
}
